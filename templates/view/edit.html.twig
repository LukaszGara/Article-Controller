{% extends 'base.html.twig' %}

{% block title %} Edit panel {% endblock %}

{% block body %}
<div class="list-group" style=" margin-top: 10%">
    <div class="list-group" style="width: 15%; height: 300px; overflow: auto;">
    <table class="table table-hover" id="delete">
        <thead>
            <tr>
                <th scope="col">Article list</th>
            </tr>
        </thead>
        <tbody>
            <td>
                
                {% for Articles in Articles %}
                <a href="/Articles/edit{{ Articles.id }}" class="btn btn-primary mb-2 ">{{ Articles.title }}</a>
                <a href="#" class="btn btn-danger mb-2" data-id="{{ Articles.id }}" style="float: right">Delete</a>
                <br>
                {% endfor %}
                <a href="/view/admin.html.twig" class="btn btn-primary mt-3" style="margin-left: 35%;"> New article </a>
            </td>
        </tbody>
    </table>
    </div>


    <div class="form-group mx-auto" style="width: 30%; margin-top:-15%;">
    {{ form_start(form)}}
    {{ form_widget(form)}}
    {{ form_end(form)}}
    </div>
{% endblock %}
{% block javascripts %}
<script src="/js/dlete.js"></script>
{% endblock %}