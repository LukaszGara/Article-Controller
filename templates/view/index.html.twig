{% extends 'base.html.twig' %}

{% block title %} cms {% endblock %}

{% block body %}
<div class="container">
{% for article in article %}
    <div class="card">
  <div class="card-body">
    <h4 class="card-title">{{ article.title }}</h4>
    <h6 class="card-subtitle mb-2 text-muted"> Author: {{ article.author }}</h6>
    <p class="card-text">{{ article.body|u.truncate(150,'...') }}</p>
    
    <a href="/Articles/show/{{ article.id }}" class="card-link">Full Article</a>
  </div>
</div>
    {% endfor %}
</div>
{% endblock %}